<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Ecommerce</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
  <!-- font family -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <!-- custom css file link -->
  <link rel="stylesheet" href="/css/signup.css">
</head>

<body>
  <!-- Mobile view navbar -->
  <header class="header">
    <div class="logo" data-text="YourBrand">YourBrand</div>
    <button class="hamburger" aria-label="Menu" aria-expanded="false">
      <div class="hamburger-inner">
        <span class="hamburger-bar bar-1"></span>
        <span class="hamburger-bar bar-2"></span>
        <span class="hamburger-bar bar-3"></span>
      </div>
    </button>
  </header>

  <nav class="nav">
    <div class="nav-content">
      <button class="close-btn" aria-label="Close Menu">
        <i class="fas fa-times"></i>
      </button>

      <ul class="nav-list">
        <li class="nav-item" style="--delay: 0.1s">
          <a href="/" class="nav-link">
            <span class="link-text">Home</span>
            <span class="link-icon"><i class="fas fa-chevron-right"></i></span>
          </a>
        </li>
        <li class="nav-item" style="--delay: 0.2s">
          <a href="#" class="nav-link">
            <span class="link-text">About</span>
            <span class="link-icon"><i class="fas fa-chevron-right"></i></span>
          </a>
        </li>
        <li class="nav-item" style="--delay: 0.3s">
          <a href="#" class="nav-link">
            <span class="link-text">Services</span>
            <span class="link-icon"><i class="fas fa-chevron-right"></i></span>
          </a>
        </li>
        <li class="nav-item" style="--delay: 0.4s">
          <a href="#" class="nav-link">
            <span class="link-text">Contact</span>
            <span class="link-icon"><i class="fas fa-chevron-right"></i></span>
          </a>
        </li>
        <li class="nav-item" style="--delay: 0.5s">
          <a href="/login" class="nav-link">
            <span class="link-text">Login/Signup</span>
            <span class="link-icon"><i class="fas fa-chevron-right"></i></span>
          </a>
        </li>
      </ul>

      <div class="nav-footer">
        <div class="social-links">
          <a href="#" aria-label="Facebook"><i class="fab fa-facebook-f"></i></a>
          <a href="#" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
          <a href="#" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
          <a href="#" aria-label="LinkedIn"><i class="fab fa-linkedin-in"></i></a>
        </div>
        <p class="copyright">© 2023 YourBrand. All rights reserved.</p>
      </div>
    </div>
  </nav>
  <div class="menu-overlay"></div>

  <!-- Desktop Navbar -->
  <nav class="desktop-navbar">
    <div class="logo">
      <img src="/uploads/logo.png" alt="Logo" width="180px" height="80px">
    </div>
    <ul class="desktop-nav-list">
      <li class="m-1"><a href="/">Home</a></li>
      <li class="m-1"><a href="/about">About</a></li>
      <li class="m-1"><a href="/services">Services</a></li>
      <li class="m-1"><a href="/contact">Contact</a></li>
      <li class="m-1"><a href="/login">Login</a></li>
    </ul>
  </nav>

  <!-- Signup container -->
  <div class="login-container">
    <div class="login-card">
      <h2><i class="bi bi-person-plus-fill"></i> Signup</h2>

      <form action="/signup" method="POST">
        <div class="row mb-3">
          <div class="col">
            <input type="text" class="form-control" name="first_name" placeholder="First Name" required>
          </div>
          <div class="col">
            <input type="text" class="form-control" name="last_name" placeholder="Last Name" required>
          </div>
        </div>
        <div class="mb-3">
          <input type="email" class="form-control" name="email" placeholder="Enter your email" required>
        </div>
        <div class="mb-3">
          <input type="password" class="form-control" name="password" placeholder="Enter your password" required
            minlength="6">
        </div>
        <button type="submit" class="btn btn-custom">Sign Up</button>
      </form>

      <div class="extra-links">
        <p>Already have an account? <a href="/login">Login</a></p>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="footer mt-5 text-white">
    <div class="container py-5">
      <div class="row">
        <!-- About Section -->
        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 mb-4 footer-inner-box">
          <h5 class="fw-bold">My Ecommerce</h5>
          <p>Your one-stop shop for all your needs. We provide the best quality products at affordable prices.
          </p>
        </div>

        <!-- Quick Links -->
        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 mb-4 footer-inner-box">
          <h5 class="fw-bold">Quick Links</h5>
          <ul class="list-unstyled">
            <li><a href="#" class="footer-link">Home</a></li>
            <li><a href="#" class="footer-link">About</a></li>
            <li><a href="#" class="footer-link">Services</a></li>
            <li><a href="/login" class="footer-link">Login / Signup</a></li>
          </ul>
        </div>

        <!-- Social Media -->
        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 mb-4 footer-inner-box">
          <h5 class="fw-bold">Follow Us</h5>
          <div class="d-flex gap-3">
            <a href="#" class="footer-icon"><i class="bi bi-facebook"></i></a>
            <a href="#" class="footer-icon"><i class="bi bi-twitter"></i></a>
            <a href="#" class="footer-icon"><i class="bi bi-instagram"></i></a>
            <a href="#" class="footer-icon"><i class="bi bi-github"></i></a>
          </div>
        </div>
      </div>
      <hr class="text-white">
      <p class="text-center m-0">© <%= new Date().getFullYear() %> My Ecommerce. All Rights Reserved.</p>
    </div>
  </footer>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/index.js"></script>

</body>

</html>